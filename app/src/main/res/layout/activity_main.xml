<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aitana.ej3b_intent_ad.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca los siguientes datos por favor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txt" />

    <TextView
        android:text="Fecha de nacimiento:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDNI"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:id="@+id/txtfFN" />

    <TextView
        android:text="Sexo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfFN"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/txtSexo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editxtNombre"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="33dp" />

    <TextView
        android:text="Nombre:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre"
        android:layout_alignBottom="@+id/editxtNombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="DNI:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/txtDNI"
        android:layout_below="@+id/txtNombre"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/txtfFN"
        android:layout_centerHorizontal="true"
        android:id="@+id/editxtDNI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editxtDNI"
        android:layout_toEndOf="@+id/txtfFN"
        android:layout_marginStart="22dp"
        android:layout_marginTop="44dp"
        android:id="@+id/editxtFN" />


    <Button
        android:text="Almacenar preferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/btnAlmacena"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editxtDNI" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSexo"
        android:layout_alignStart="@+id/btnAlmacena"
        android:layout_marginStart="18dp">

        <RadioButton
            android:text="Hombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rbMujer"
            android:layout_alignStart="@+id/rbMujer"
            android:layout_marginTop="12dp"
            android:id="@+id/rbHombre"
            android:layout_weight="1" />

        <RadioButton
            android:text="Mujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtSexo"
            android:layout_alignStart="@+id/editxtNombre"
            android:id="@+id/rbMujer"
            android:checked="true"
            android:layout_weight="1" />
    </RadioGroup>


    />
</RelativeLayout>
